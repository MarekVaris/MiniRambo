<Window 
    x:Class="MiniRambo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:MiniRambo"
    mc:Ignorable="d"
    Loaded="WindowLoaded"
    Title="MiniRambo" 
    Width="1280"
    Height="800"
    Background="DarkSlateGray"
    KeyDown="WindowKeyDown"
    KeyUp="WindowKeyUp"
    MouseLeftButtonDown="WinMouseClick"
    MouseMove="WinMouseMove">
    <Viewbox Stretch="Fill">
        <Canvas
            Width="1280"
            Height="800">
            <!--MainMenuCanvas-->
            <Canvas
                x:Name="mainMenu"
                Width="1280"
                Height="800"
                Opacity="1">
                <StackPanel
                    Canvas.Left="550" 
                    Canvas.Top="200"
                    Visibility="Hidden">
                    <Button 
                        Background="DarkGray"
                        Opacity="0.5"
                        Click="StartGameClick"
                        MinHeight="100"
                        Margin="0,0,0,100" 
                        Content="Start Game" 
                        FontSize="36">
                    </Button>
                    <Button 
                        Background="DarkGray"
                        Opacity="0.5"
                        Click="SettingClick"
                        MinHeight="100"
                        Margin="0,0,0,100" 
                        Content="Setting" 
                        FontSize="36">
                    </Button>
                    <Button 
                        Background="DarkGray"
                        Opacity="0.5"
                        Click="LeaveGame"
                        MinHeight="100"
                        Margin="0,0,0,0"
                        Content="Leave Game" 
                        FontSize="36">
                    </Button>
                </StackPanel>
            </Canvas>
            <!--GameCanvas-->
            <Canvas
                x:Name="gameCanvas"
                Width="1280"
                Height="800" 
                Visibility="Visible">
                <StackPanel 
                    x:Name="healthUi"
                    Orientation="Horizontal"
                    Margin="10"
                    Panel.ZIndex="2">
                </StackPanel>
                <TextBlock
                    x:Name="ammoText"   
                    Canvas.Bottom="0"
                    Background="DarkGray"
                    Opacity="0.5"
                    Width="105"
                    Height="45"
                    Text=""
                    FontSize="40"
                    Panel.ZIndex="2">
                </TextBlock>
                <TextBlock
                    x:Name="scoreText"   
                    Background="DarkGray"
                    Canvas.Right="0"
                    Height="40"
                    MinWidth="100"
                    Opacity="0.5"
                    Text="0"
                    TextAlignment="Right"
                    FontSize="30"
                    Panel.ZIndex="2">
                </TextBlock>
                <TextBlock
                    x:Name="coinsText"   
                    Background="DarkGray"
                    Canvas.Right="0"
                    Canvas.Top="45"
                    Height="40"
                    MinWidth="70"
                    Opacity="0.5"
                    Text="0"
                    TextAlignment="Right"
                    FontSize="30"
                    Panel.ZIndex="2">
                </TextBlock>
                <!--Stop Canvas-->
                <Canvas
                    x:Name="stopCanvas"
                    Visibility="Hidden"
                    Panel.ZIndex="2">
                    <StackPanel
                        Canvas.Left="550" 
                        Canvas.Top="200">
                        <TextBlock
                            x:Name="textStopCanvas"
                            Background="Transparent"
                            Text="Pause"
                            MinWidth="220"
                            MinHeight="100"
                            FontSize="50"
                            TextAlignment="Center"/>
                        <Button 
                            Background="DarkGray"
                            Opacity="0.5"
                            Click="RestartGame"
                            MinHeight="100"
                            Margin="0,0,0,100" 
                            Content="Restart Game" FontSize="36">
                        </Button>
                        <Button 
                            Background="DarkGray"
                            Opacity="0.5"
                            Click="LeaveGame"
                            MinHeight="100"
                            Margin="0,0,0,0" 
                            Content="Exit Game" FontSize="36">
                        </Button>
                    </StackPanel>
                </Canvas>
                <Canvas
                    x:Name="shopCanvas"
                    Visibility="Visible">
                    <StackPanel
                        Background="DarkCyan"
                        Canvas.Top="100"
                        Canvas.Left="150"
                        Width="300"
                        Height="400">
                        <StackPanel
                            MinHeight="100"
                            Orientation="Horizontal"
                            Margin="10,0,10,50">
                            <TextBlock
                                Width="150"
                                Height="40"
                                Text="HP:+0" 
                                FontSize="30">
                            </TextBlock>
                            <TextBlock
                                TextAlignment="Right"
                                Width="60"
                                Height="40"
                                Text="10"
                                Margin="0,0,10,0"
                                FontSize="30">
                            </TextBlock>
                            <Button
                                Width="60"
                                Height="50"
                                Content="Buy" 
                                CommandParameter="Hp"
                                Click="StatsBuy">
                            </Button>
                        </StackPanel>
                        <StackPanel
                            MinHeight="100"
                            Orientation="Horizontal"
                            Margin="10,0,10,50">
                            <TextBlock
                                Width="150"
                                Height="40"
                                Text="DMG:+0" 
                                FontSize="28">
                            </TextBlock>
                            <TextBlock
                                TextAlignment="Right"
                                Width="60"
                                Height="40"
                                Text="10"
                                Margin="0,0,10,0"
                                FontSize="30">
                            </TextBlock>
                            <Button
                                Width="60"
                                Height="50"
                                Content="Buy" 
                                CommandParameter="Hp"
                                Click="StatsBuy">
                            </Button>
                        </StackPanel>
                        <StackPanel
                            MinHeight="100"
                            Orientation="Horizontal"
                            Margin="10,0,10,50">
                            <TextBlock
                                Width="150"
                                Height="40"
                                Text="SPD:+0" 
                                FontSize="30">
                            </TextBlock>
                            <TextBlock
                                TextAlignment="Right"
                                Width="60"
                                Height="40"
                                Text="10"
                                Margin="0,0,10,0"
                                FontSize="30">
                            </TextBlock>
                            <Button
                                Width="60"
                                Height="50"
                                Content="Buy" 
                                CommandParameter="Hp"
                                Click="StatsBuy">
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel
                        Canvas.Top="100"
                        Canvas.Left="500"
                        Width="350"
                        Height="400"
                        Background="PowderBlue">

                    </StackPanel>
                    <StackPanel
                        Canvas.Top="100"
                        Canvas.Left="900"
                        Width="250"
                        Height="550">
                        <Button>

                        </Button>
                    </StackPanel>
                </Canvas>
            </Canvas>
        </Canvas>
    </Viewbox>
</Window>
