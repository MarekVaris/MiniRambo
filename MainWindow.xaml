<Window 
    x:Class="MiniRambo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:MiniRambo"
    mc:Ignorable="d"
    Loaded="WindowLoaded"
    Title="MiniRambo" 
    Width="1280"
    Height="800"
    Background="DarkSlateGray"
    KeyDown="WindowKeyDown"
    KeyUp="WindowKeyUp"
    MouseLeftButtonDown="WinMouseClick"
    MouseMove="WinMouseMove">

    <Viewbox Stretch="Fill">
        <Canvas
            Width="1280"
            Height="800">
            <Canvas
                x:Name="mainMenu"
                Width="1280"
                Height="800"
                Opacity="1">
                <StackPanel
                    Canvas.Left="550" 
                    Canvas.Top="200"
                    Visibility="Visible">
                    <Button 
                        Background="DarkGray"
                        Opacity="0.5"
                        Click="StartGameClick"
                        MinHeight="100"
                        Margin="0,0,0,100" 
                        Content="Start Game" FontSize="36">
                    </Button>
                    <Button 
                        Background="DarkGray"
                        Opacity="0.5"
                        Click="SettingClick"
                        MinHeight="100"
                        Margin="0,0,0,100" 
                        Content="Setting" FontSize="36">
                    </Button>
                    <Button 
                        Background="DarkGray"
                        Opacity="0.5"
                        Click="LeaveGame"
                        MinHeight="100"
                        Margin="0,0,0,0"
                        Content="Leave Game" FontSize="36">
                    </Button>
                </StackPanel>
            </Canvas>
            <Canvas
                x:Name="gameCanvas"
                Width="1280"
                Height="800" 
                Visibility="Hidden">
                <StackPanel 
                    x:Name="healthUi"
                    Orientation="Horizontal"
                    Margin="10"
                    Panel.ZIndex="2">
                </StackPanel>
                <TextBlock
                    x:Name="ammoText"   
                    Canvas.Top="745"
                    Background="DarkGray"
                    Opacity="0.5"
                    Width="100"
                    Height="55"
                    Text=""
                    FontSize="40"
                    Panel.ZIndex="2">
                </TextBlock>
                <Canvas
                    x:Name="stopCanvas"
                    Visibility="Hidden"
                    Width="1280"
                    Height="800"
                    Panel.ZIndex="2">
                    <StackPanel
                        Canvas.Left="550" 
                        Canvas.Top="300">
                        <Button 
                            Background="DarkGray"
                            Opacity="0.5"
                            Click="RestartGame"
                            MinHeight="100"
                            Margin="0,0,0,100" 
                            Content="Restart Game" FontSize="36">
                        </Button>
                        <Button 
                            Background="DarkGray"
                            Opacity="0.5"
                            Click="LeaveGame"
                            MinHeight="100"
                            Margin="0,0,0,0" 
                            Content="Exit Game" FontSize="36">
                        </Button>
                    </StackPanel>
                </Canvas>
            </Canvas>
        </Canvas>
    </Viewbox>
</Window>
