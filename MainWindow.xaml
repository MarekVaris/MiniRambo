<Window 
    x:Class="MiniRambo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:MiniRambo"
    mc:Ignorable="d"
    Loaded="WindowLoaded"
    Title="MiniRambo" 
    Width="1280"
    Height="1024"
    Background="DarkSlateGray"
    KeyDown="WindowKeyDown"
    KeyUp="WindowKeyUp"
    MouseLeftButtonDown="WinMouseClick"
    MouseMove="WinMouseMove">

    <Viewbox Stretch="Fill">
        <Canvas 
            x:Name="gameCanvas"
            Width="1280"
            Height="1024">
            <Canvas
                x:Name="mainMenu"
                Width="1280"
                Height="1024"
                Opacity="1">
                <StackPanel
                    Width="400"
                    Height="600"
                    Canvas.Left="440" 
                    Canvas.Top="252">
                    <Button 
                        Background="DarkGray"
                        Opacity="0.5"
                        Click="StartGameClick"
                        MinHeight="100"
                        Margin="0,0,0,100" 
                        Content="Start Game" FontSize="36">
                    </Button>
                    <Button 
                        Background="DarkGray"
                        Opacity="0.5"
                        Click="SettingClick"
                        MinHeight="100"
                        Margin="0,0,0,100" 
                        Content="Setting" FontSize="36">
                    </Button>
                    <Button 
                        Background="DarkGray"
                        Opacity="0.5"
                        Click="LeaveGame"
                        MinHeight="100"
                        Margin="0,0,0,0"
                        Content="Leave Game" FontSize="36">
                    </Button>
                </StackPanel>
            </Canvas>
            <TextBlock
                x:Name="ammoText"    
                Background="DarkGray"
                Opacity="0"
                Width="100"
                Height="55"
                Canvas.Top="970"
                Text=""
                FontSize="40"
                Panel.ZIndex="2">
            </TextBlock>
        </Canvas>
    </Viewbox>
</Window>
